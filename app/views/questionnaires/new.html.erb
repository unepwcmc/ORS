<div class="span-24 last" id="right_col" >
  <%= render :partial => "administration/breadcrumbs" -%>
  <%= render :partial => "administration/menu", :locals => {:header => "New Questionnaire", :include_options => "questionnaires"} -%>
  <div class="prepend-1 span-14 colborder">
    <%= form_for( @questionnaire, :html => { :multipart => true, :class => "formtastic normal", :id => "generator_form" }) do |f| -%>
      
    <% if @questionnaire.errors.any? %>
      <div id="errorExplanation">
        <ul id='error_messages'>
          <% @questionnaire.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

      <div id="error_container" class="error_container">
          <h5>There are some errors in your form submission, please see details below</h5>
          <ul id="error_messages"></ul>
        </div>
        <%= render :partial => "questionnaires/form", :locals => {:f => f} -%>
        <p><%= f.submit "Add Questionnaire" -%></p>
        <div class="error_container">
          <h5>There are errors in your form submission, please see details above the form!</h5>
        </div>
    <% end -%>
  </div><!-- /questionnaire_form -->
  <div class="span-8 last">
    <h3>Recently created questionnaires</h3>
    <table>
      <thead>
      <tr>
        <th>Title</th>
        <th>Created by</th>
      </tr>
      </thead>
      <tbody>
      <% @questionnaires_created.each do |questionnaire| -%>
          <tr>
            <td><%= link_to h(questionnaire.title), dashboard_questionnaire_path(questionnaire) %></td>
            <td><%= link_to h(questionnaire.user.full_name), user_path(questionnaire.user) %></td>
          </tr>
      <% end -%>
      </tbody>
    </table>
  </div><!-- /recently_created_questionnaires -->
</div><!-- /right_col -->
<script type="text/javascript">
    $(window).load(function(){
        myLib.questionnaire_new.init();
        myLib.text_areas.init();
    });
</script>
