  <span style="float:left; width:<%= section.level >= 3 ? "9em" : "10em" %>">
    <%= link_to (section.level == 1 ? "â–º " : "") + OrtSanitize.white_space_cleanse(section.value_in((section.root? ? :tab_title : :title), @authorization[:language])), "#", :title=> "section content #{section.id.to_s}", :style=> 'width:9em' %>
    </span>
  <span id="img<%=section.id.to_s%>" style="padding-top:5px; padding-right: 5px; float:right;"></span>
