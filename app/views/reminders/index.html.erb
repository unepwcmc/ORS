<div class="span-24 last" id="content">

  <div id="content_header">
    <%= render :partial => "administration/breadcrumbs" -%>
    <% info_tip_text = "Manage existing reminders and add new ones. <br />A reminder is added to the system and can later be associated with any questionnaire deadlines. This way you can reuse your reminders. This association is defined in a Deadline page, which can be accessed from the Questionnaire's dashboard page." %>
    <%= render :partial => "administration/menu", :locals => {:header => "Manage reminders " + info_tip("Manage reminders", info_tip_text) , :include_options => nil} -%>
  </div>
  <p><%= link_to "Add a reminder", new_reminder_path %></p>
  <table class="tablesorter">
    <thead>
    <tr>
      <th>Title</th>
      <th>Message</th>
      <th>When</th>
      <th>No associated deadlines</th>
      <th></th>
    </tr>
    </thead>
    <tbody>
    <% @reminders.each do |reminder| %>
        <tr>
          <td><%=h reminder.title%></td>
          <td><%=h reminder.body %></td>
          <td><%= pluralize reminder.days, "day" %> before</td>
          <td><%= reminder.deadlines.count %></td>
          <td>
            <%= link_to "Show", reminder %> |
            <%= link_to "Edit", edit_reminder_path(reminder) %> |
            <%= link_to "Remove", reminder, :method => :delete, :confirm => "Are you sure you want to delete this reminder?" %>
          </td>
        </tr>
    <% end %>
    </tbody>
  </table>
</div><!-- /content -->
