<fieldset>
<div class="page-header"><h2><%= @deadline.new_record? ? "Add new deadline" : "Edit existing deadline" %></h2></div>
<p>Questionnaire: <%= link_to @questionnaire.title, dashboard_questionnaire_path(@questionnaire) %></p>
  <ol>
    <div class="row padded">
      <div class="col col-4"><%= f.label :title %></div>
      <div class="col col-8 border-left"><%= f.text_field :title %></div>
    </div>
    <div class="row padded">
      <div class="col col-4"><%= f.label :soft_deadline, "Soft deadline?" %></div>
      <div class="col col-8 border-left"><%= f.check_box :soft_deadline %></div>
    </div>
    <div class="row padded">
      <div class="col col-4"><%= f.label :due_date %></div>
      <div class="col col-8 border-left"><%= date_select :deadline, :due_date, :default => Date.today, :start_year => Date.today.year, :order => [ :day, :month, :year ], :prompt => true -%></div>
    </div>
    <%= f.submit %>
  </ol>
</fieldset>
<script type="text/javascript">
  FormValidator.initialize($('#generator_form'));
</script>
