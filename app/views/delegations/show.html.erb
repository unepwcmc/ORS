<div class="span-24 last user_profile" id="content">
  <%= render :partial => "user_delegates/options"%>
  <h1><%= t('manage_delegates.delegations_show_t')%></h1>
  <div id="q_dashboard">
    <p><strong><%= t('generic.delegator')%>:</strong> <%= link_to h(@delegator.full_name), @delegator %></p>
    <p><strong><%= t('generic.delegate') %>:</strong> <%= link_to h(@delegation.user_delegate.delegate.full_name), user_delegate_path(@delegation.user_delegate) %></p>
    <p><strong><%= t('generic.questionnaire')%>:</strong> <%=h @delegation.questionnaire.present? ? @delegation.questionnaire.title(I18n.locale.to_s) : "-" %></p>
    <p><strong><%= t('generic.remarks') %>:</strong> <%= @delegation.remarks.present? ? h(@delegation.remarks) : "-" %></p>
    <% if @delegation.delegation_sections.blank? -%>
      <p><strong><%= t('generic.details')%></strong> You have not specified a list of sections for the delegate to fill, so the system will allow the user to fill any part of the questionnaire.</p>
    <% else -%>
        </div>
        <div>
          <h4><%= t('manage_delegates.delegations_show_sl')%></h4>
          <table>
            <thead>
            <tr>
              <th width="35%"><%= t('generic.section') %></th>
              <th width="35%"><%= t('delegation_details.root_section_th') %></th>
              <th width="20%"><%= t('delegation_details.loop_th')%></th>
              <th width="10%"></th>
            </tr>
            </thead>
            <tbody>
            <% @delegation.delegation_sections.each do |delegation_section| -%>
                <tr>
                  <td><%= delegation_section.section.present? ? OrtSanitize.white_space_cleanse(delegation_section.section.title(I18n.locale.to_s)) : "-" %></td>
                  <td><%= delegation_section.section && delegation_section.section.root.present? ? OrtSanitize.white_space_cleanse(delegation_section.section.root.title(I18n.locale.to_s)) : "-"%></td>
                  <td>
                    <%= delegation_section.loop_item_names.map{|loop_item_name| h(loop_item_name.item_name(I18n.locale.to_s))}.join(', ') -%>
                  </td>
                  <td><%= link_to t('generic.edit'), edit_delegation_section_path(delegation_section) %> | <%= link_to t('generic.remove'), delegation_section, :method => :delete, :confirm => t('generic.are_you_sure') %></td>
                </tr>
            <% end -%>
            </tbody>
          </table>
    <% end -%>
    </div>
    <p class="clear"><%= link_to t('manage_delegates.add_sections'), new_delegation_delegation_section_path(@delegation)%></p>
    </div><!-- /content -->
