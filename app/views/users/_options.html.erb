<% @user ||= (current_user || nil) %>
<% content_for :subnav do %>
  <ul>
    <% if @user && can?( :update, @user) %>
      <li><%= sub_nav_link_with_class t("user_dashboard.edit_u"), edit_user_path(@user.id) %></li>
    <% end %>

    <% if @user && ( @user.role?(:admin) || @user.role?(:respondent) ) %>
      <li><%= sub_nav_link_with_class "Manage Delegates", user_user_delegates_path(@user.id) %></li>
    <% end %>

    <% if @user && @user.role?(:delegate) %>
      <li><%= sub_nav_link_with_class "Delegated To Me", dashboard_user_delegate_path(@user.id) %></li>
    <% end %>
  </ul>
<% end %>
