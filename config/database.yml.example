test:
  adapter: postgresql
  database: ort_test
  pool: 5
  username: postgres
  password: postgres
  timeout: 5000

staging:
  adapter: postgresql
  database: ort_staging
  pool: 10
  username: postgres
  host: localhost
  port: 15432
  password: 
